<form method="post" asp-controller="Home" asp-action="SignUp">
    <div id="id02" class="modal">

        <div class="modal-content animate">
            <div class="container login">
                <div class="imgcontainer">
                    <span onclick="document.getElementById('id02').style.display='none'" class="close" title="Close Modal">&times;</span>
                </div>
                <div class="form-group mob_form" style="padding-bottom: 20px;">                    
                    <label asp-for="Username" class="col-md-3 control-label">Email:</label>
                    <div class="col-md-9">                        
                        <input asp-for="Username" class="form-control logIn_input" type="email" placeholder="Enter Email" name="email" required autofocus>
                        <span asp-validation-for="Username"></span>
                    </div>
                </div><br />
                @*<label><b>Email</b></label>
                    <input class="input_field" type="email" placeholder="Enter Email" name="email" required>*@
                <div class="form-group mob_form" style="padding-bottom: 20px;">
                    <label asp-for="company_name" class="col-md-3 control-label">Company Name:</label>
                    <div class="col-md-9">
                        <input asp-for="company_name" class="form-control logIn_input" placeholder="Enter Company Name" name="company_name" required autofocus>
                        <span asp-validation-for="company_name"></span>
                    </div>
                </div><br />

                <div class="form-group mob_form" style="padding-bottom: 20px;">
                    <label asp-for="Password" class="col-md-3 control-label"></label>
                    <div class="col-md-9">
                        <input asp-for="Password" name="psw" class="form-control logIn_input" />
                        <span asp-validation-for="Password"></span>
                    </div>
                </div><br />

                @*<label><b>Password</b></label>
                    <input class="input_field" type="password" placeholder="Enter Password" name="psw" required>*@
                <div class="form-group mob_form" style="padding-bottom: 20px;">
                    <label asp-for="ConfirmPassword" class="col-md-3 control-label"></label>
                    <div class="col-md-9">
                        <input asp-for="ConfirmPassword" class="form-control logIn_input" />
                        <span asp-validation-for="ConfirmPassword"></span>
                    </div>
                </div><br />
                @*<label><b>Repeat Password</b></label>
                    <input class="input_field" type="password" placeholder="Repeat Password" name="psw-repeat" required>*@
                <div class="col-md-12" style="font-size: 12px;text-align: center;">
                    <span>
                        <input type="checkbox" checked="checked">
                    </span>
                    <span>
                        By creating an account you agree to our <a href="#">Terms & Privacy.</a>
                    </span>
                </div>
                <br />


                <div class="clearfix">
                    <button type="submit" class="signupbtn">Sign Up</button>
                    @*<button type="button" onclick="document.getElementById('id02').style.display='none'" class="cancel">Cancel</button>*@
                </div>
            </div>
        </div>
    </div>
</form>